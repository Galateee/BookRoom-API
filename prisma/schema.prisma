generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modèle des salles de réunion
model Room {
  id            String    @id @default(uuid())
  name          String
  description   String
  capacity      Int
  pricePerHour  Float
  equipments    String[]
  imageUrl      String
  images        String[]
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  bookings      Booking[]

  @@map("rooms")
}

// Modèle des réservations
model Booking {
  id             String        @id @default(uuid())
  roomId         String
  room           Room          @relation(fields: [roomId], references: [id])
  userId         String        // Clerk User ID
  date           String        // Format: YYYY-MM-DD
  startTime      String        // Format: HH:MM
  endTime        String        // Format: HH:MM
  customerName   String
  customerEmail  String
  customerPhone  String?
  numberOfPeople Int
  totalPrice     Float
  status         BookingStatus @default(PENDING_PAYMENT)
  
  // Stripe IDs
  stripeSessionId   String?    @unique  // Checkout Session ID
  stripePaymentId   String?    @unique  // Payment Intent ID
  stripeRefundId    String?             // Refund ID si remboursé
  
  // QR Code pour check-in
  qrCodeUrl         String?
  
  // Timestamps spécifiques
  paymentDate       DateTime?
  completedAt       DateTime?
  cancelledAt       DateTime?
  
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  // Relations
  payment        Payment?
  refunds        Refund[]

  @@map("bookings")
  @@index([userId])
  @@index([roomId])
  @@index([date])
  @@index([status])
  @@index([stripeSessionId])
}

// Modèle des paiements
model Payment {
  id                    String         @id @default(uuid())
  bookingId             String         @unique
  booking               Booking        @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  // Montants
  amount                Float          // Montant total en euros
  amountCents           Int            // Montant en centimes (pour Stripe)
  currency              String         @default("eur")
  
  // Stripe IDs
  stripePaymentIntentId String         @unique
  stripeChargeId        String?
  
  // Statut
  status                PaymentStatus  @default(PENDING)
  
  // Méthode de paiement
  paymentMethod         String?        // card, apple_pay, google_pay
  last4                 String?        // Derniers 4 chiffres de la carte
  cardBrand             String?        // visa, mastercard, amex, etc.
  
  // Détails
  receiptUrl            String?        // URL du reçu Stripe
  metadata              Json?          // Données additionnelles
  
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  
  @@map("payments")
}

// Modèle des remboursements
model Refund {
  id             String         @id @default(uuid())
  bookingId      String
  booking        Booking        @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  // Montant
  amount         Float
  amountCents    Int
  currency       String         @default("eur")
  
  // Stripe
  stripeRefundId String         @unique
  
  // Détails
  reason         RefundReason
  status         RefundStatus   @default(PENDING)
  adminNotes     String?
  
  createdAt      DateTime       @default(now())
  processedAt    DateTime?
  
  @@map("refunds")
  @@index([bookingId])
}

enum BookingStatus {
  PENDING_PAYMENT
  PAYMENT_PROCESSING
  PAYMENT_RECEIVED
  CONFIRMED
  CHECKED_IN
  IN_PROGRESS
  COMPLETED
  CANCELLED_BY_USER
  CANCELLED_BY_ADMIN
  CANCELLED_NO_PAYMENT
  NO_SHOW
  REFUNDED
  MODIFIED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  CANCELLED
  REFUNDED
  PARTIALLY_REFUNDED
}

enum RefundReason {
  CANCELLED_BY_USER
  CANCELLED_BY_ADMIN
  DUPLICATE_BOOKING
  ROOM_UNAVAILABLE
  CUSTOMER_REQUEST
  NO_SHOW_DISPUTE
  OTHER
}

enum RefundStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  CANCELLED
}
